extends ../_layouts/two-column-fluid

block menu
  
  mixin item(name, slug)
    li.nav-item
      a(href="/api/#{slug}" class= title === name ? "active" : undefined).nav-link #{name}
      
  h3.menu-header Services
  ul.nav.nav-pills.nav-stacked
    +item('Bitcoind Service', 'service/bitcoind')
    +item('Database Service', 'service/database')
    +item('Address Service', 'service/address')
    +item('Web Service', 'service/web')

  h3.menu-header Library
  ul.nav.nav-pills.nav-stacked
    +item('Address', 'address')
    +item('Block', 'block')
    +item('Crypto', 'crypto')
    +item('Encoding', 'encoding')
    +item('HD Keys', 'hd-keys')
    +item('Networks', 'networks')
    +item('Private Key', 'private-key')
    +item('Public Key', 'public-key')
    +item('Script', 'script')
    +item('Transaction', 'transaction')
    +item('Bitcoin Units', 'unit')
    +item('Unspent Outputs', 'unspent-output')
    +item('Bitcoin URIs', 'uri')

block content
  .api-content
    .docs.bg-white
      .container
        block docs
    .lib.bg-dark
      .container
          block lib

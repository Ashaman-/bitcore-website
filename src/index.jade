extends _layouts/primary

block content

  .hero.background-center(role="navigation" style="background: #ffffff url('/images/iso-grid.jpg'); background-position: center; background-repeat: no-repeat;")
    .container.hero-container
      .row
        .col-sm-12
          ul.nav.navbar-nav.space-between
            li.nav-item
              a.nav-link(href="/getting-started") Getting Started
            li.nav-item
              a.nav-link(href="/services") Forum
            li.nav-item
              a.nav-link(href="/docs") API
            li.nav-item
              a.nav-link(href="/api") Documentation
          img(src="/images/bitcore-logo-vertical-dark.svg").m-y-lg
